<UserControl x:Class="PastryShop.View.CashierCartDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PastryShop.Converter"
             FocusManager.IsFocusScope="True"
             Loaded="OnLoaded"
             FocusVisualStyle="{x:Null}">

    <UserControl.Resources>
        <local:ImagePathToImageConverter x:Key="ImagePathToImageConverter"/>
        <local:WidthToVisibilityConverter x:Key="WidthToVisibilityConverter" Threshold="300"/>
        <local:TypeToVisibilityConverter x:Key="TypeToVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.InputBindings>
        <KeyBinding Gesture="Ctrl+L" Command="{Binding PayLaterCommand}"/>
        <KeyBinding Gesture="Ctrl+G" Command="{Binding PayCashCommand}"/>
        <KeyBinding Gesture="Ctrl+N" Command="{Binding PayCardCommand}"/>
    </UserControl.InputBindings>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <TextBlock Text="{DynamicResource PosCartTitleString}" Style="{DynamicResource PosCartTitleTextBlockStyle}"/>
        </Border>

        <Grid Grid.Row="1">

            <ListBox
                ItemsSource="{Binding CartProducts}" 
                Style="{DynamicResource PosCartProductsListBoxStyle}"    
                ItemContainerStyle="{DynamicResource PosCartProductsListBoxItemStyle}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Style="{DynamicResource PosCartProductsListBoxItemGridStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColImage"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColName"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColPrice"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColQuantity"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ColRemove"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Grid.Column="0" Style="{DynamicResource PosCartProductsEllipseStyle}">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding ImagePath, Converter={StaticResource ImagePathToImageConverter}, ConverterParameter=Products}"/>
                                </Ellipse.Fill>
                                <Ellipse.Visibility>
                                    <Binding Path="ActualWidth"
                                    RelativeSource="{RelativeSource AncestorType=UserControl}"
                                    Converter="{StaticResource WidthToVisibilityConverter}"/>
                                </Ellipse.Visibility>
                            </Ellipse>
                            <TextBlock Grid.Column="2"
                                Text="{Binding Name}"
                                Style="{DynamicResource PosCartProductsNameTextBlockStyle}">
                                <TextBlock.ToolTip>
                                    <ToolTip Content="{Binding Name}" Style="{StaticResource PosProductsNameToolTipStyle}"/>
                                </TextBlock.ToolTip>
                            </TextBlock>
                            <TextBlock Grid.Column="4" Text="{Binding Price}" Style="{DynamicResource PosCartProductsPriceTextBlockStyle}"/>
                            <Grid Grid.Column="6" Style="{DynamicResource PosCartProductsQuantityGridStyle}">
                                <Border Style="{DynamicResource PosCartProductsQuantityBorderStyle}">
                                    <TextBlock Text="{Binding QuantityProduct}" Style="{DynamicResource PosCartProductsQuantityTextBlockStyle}"/>
                                </Border>
                                <Button Content="–"
                                    Command="{Binding DecreaseCommand}" Style="{StaticResource PosCartProductsDecreaseButtonStyle}">
                                </Button>
                                <Button x:Name="IncreaseButton" Content="+" 
                                    Command="{Binding IncreaseCommand}" Style="{DynamicResource PosCartProductsIncreaseButtonStyle}">
                                </Button>
                                <Popup IsOpen="{Binding IsMaxQuantityWarningVisible}" PlacementTarget="{Binding ElementName=IncreaseButton}" 
                                    Placement="Bottom" AllowsTransparency="True" PopupAnimation="Fade">
                                    <Border Style="{DynamicResource PosCartProductsQuantityPopupBorderStyle}">
                                        <TextBlock Text="{DynamicResource PosCartMaximumStockReachedString}" Style="{DynamicResource PosCartProductsQuantityPopupTextBlockStyle}"/>
                                    </Border>
                                </Popup>
                            </Grid>
                            <Button Grid.Column="8" 
                                Command="{Binding DataContext.RemoveCartItemCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource PosCartProductsRemoveButtonStyle}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Text="{DynamicResource PosCartEmptyString}"
                Style="{DynamicResource PosCartEmptyTextBlockStyle}"
                Visibility="{Binding CartProducts.Count, Converter={StaticResource TypeToVisibilityConverter}, ConverterParameter=Zero}"/>

        </Grid>

        <Border x:Name="TotalPriceBorder" Grid.Row="2" Style="{DynamicResource PosCartTotalPriceBorderStyle}">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TotalPriceTitle" Text="{DynamicResource PosCartTitleTotalString}" Style="{DynamicResource PosCartTotalPriceTitleTextBlockStyle}"/>
                <TextBlock Grid.Column="1" 
                    Style="{DynamicResource PosCartTotalPriceValueTextBlockStyle}">
                    <Run Text="{Binding TotalCartPrice, Mode=OneWay, StringFormat=N2}" FontSize="20"/>
                    <Run Text="KM" FontSize="14"/>
                </TextBlock>
            </Grid>
        </Border>

        <Border Grid.Row="3">
            <Viewbox Stretch="Uniform">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                        Text="{DynamicResource PosCartSelectPaymentOptionString}"
                        Style="{DynamicResource PosCartPayOptionTitleTextBlockStyle}"/>
                    <StackPanel Grid.Row="1" Style="{DynamicResource PosCartPayStackPanelStyle}">
                        <Button x:Name="btnPayLater" 
                            Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.PayLaterCommand}" 
                            CommandParameter="{Binding}"
                            Style="{DynamicResource PosCartPayButonStyle}">
                            <StackPanel Style="{DynamicResource PosCartPayButonStackPanelStyle}">
                                <Image Source="/Resource/Images/Application/Cashier_Button_PayLater.png" Style="{DynamicResource PosCartPayButtonImageStyle}"/>
                                <TextBlock Text="{DynamicResource PosCartPayLaterString}" Style="{DynamicResource PosCartPayButtonTextBlockStyle}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnCash"
                            Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.PayCashCommand}" 
                            CommandParameter="{Binding}"  
                            Style="{DynamicResource PosCartPayMiddleButonStyle}">
                            <StackPanel Style="{DynamicResource PosCartPayButonStackPanelStyle}">
                                <Image Source="/Resource/Images/Application/Cashier_Button_Cash.png" Style="{DynamicResource PosCartPayButtonImageStyle}"/>
                                <TextBlock Text="{DynamicResource PosCartCashString}" Style="{DynamicResource PosCartPayButtonTextBlockStyle}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnCard"
                            Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.PayCardCommand}" 
                            CommandParameter="{Binding}"   
                            Style="{DynamicResource PosCartPayButonStyle}">
                            <StackPanel Style="{DynamicResource PosCartPayButonStackPanelStyle}">
                                <Image Source="/Resource/Images/Application/Cashier_Button_Card.png" Style="{DynamicResource PosCartPayButtonImageStyle}"/>
                                <TextBlock Text="{DynamicResource PosCartCardString}" Style="{DynamicResource PosCartPayButtonTextBlockStyle}"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </Grid>
            </Viewbox>
        </Border>

    </Grid>

</UserControl>