<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
                    xmlns:lvcs="clr-namespace:LiveChartsCore.SkiaSharpView;assembly=LiveChartsCore.SkiaSharpView"
                    xmlns:lvcPaint="clr-namespace:LiveChartsCore.SkiaSharpView.Painting;assembly=LiveChartsCore.SkiaSharpView"
                    xmlns:skia="clr-namespace:SkiaSharp;assembly=SkiaSharp"
                    xmlns:ext="clr-namespace:PastryShop.Utility">

    <!-- Main Window -->

    <Style x:Key="BaseWindowGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="FloralWhite"/>
    </Style>

    <Style x:Key="BaseProfileAndMenuBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="OldLace"/>
        <Setter Property="BorderBrush" Value="#C4C4C4"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="5" Color="Gray" BlurRadius="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BaseProfileStackPanelStyle" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,20,0,20"/>
    </Style>

    <Style x:Key="BaseProfileImageStyle" TargetType="Ellipse">
        <Setter Property="Stroke" Value="DarkGray"/>
        <Setter Property="StrokeThickness" Value="3"/>
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="80"/>
    </Style>

    <Style x:Key="BaseProfileUsernameTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Foreground" Value="DarkSlateGray"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10,0,10"/>
    </Style>

    <Style x:Key="BaseMenuScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="PanningMode" Value="VerticalOnly"/>
    </Style>

    <Style x:Key="BaseMenuUniformGridStyle" TargetType="UniformGrid">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="BaseMenuButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="FloralWhite"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="MinHeight" Value="60"/>
        <Setter Property="MaxHeight" Value="90"/>
        <Setter Property="MinWidth" Value="60"/>
        <Setter Property="MaxWidth" Value="90"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" Color="Black" BlurRadius="5" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10"
                        Effect="{TemplateBinding Effect}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush" Value="DarkSlateGray"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="BaseMenuButtonIconStyle" TargetType="Image">
        <Setter Property="Height" Value="45"/>
        <Setter Property="Width" Value="45"/>
        <Setter Property="Margin" Value="20 10 18 5"/>
    </Style>

    <Style x:Key="BaseMenuButtonTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="DarkSlateGray"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5 0 5 7"/>
    </Style>

    <Style x:Key="BaseLogoAndContentGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="15"/>
    </Style>

    <Style x:Key="BaseLogoGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0 0 0 10"/>
    </Style>

    <Style x:Key="BaseContentBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="OldLace"/>
        <Setter Property="BorderBrush" Value="#C4C4C4"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="5" Color="Gray" BlurRadius="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BaseContentControlStyle" TargetType="ContentControl">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>

    <ControlTemplate x:Key="ValidationErrorTemplate">
        <DockPanel LastChildFill="True">
            <TextBlock 
                Text="{Binding [0].ErrorContent}" 
                DockPanel.Dock="Bottom"
                Foreground="Brown" 
                FontSize="13"
                FontWeight="SemiBold"
                FontStyle="Italic"
                Margin="12 0 0 0"/>
            <AdornedElementPlaceholder/>
        </DockPanel>
    </ControlTemplate>

    <BitmapImage x:Key="BaseMainLogoImage" 
        UriSource="/Resource/Images/Application/Base_Main_Logo_Light.png"/>

    <!-- Pos -->

    <Style x:Key="PosLeftContainerBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="OldLace"/>
    </Style>

    <Style x:Key="PosSearchTextBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MaxWidth" Value="220"/>
        <Setter Property="Margin" Value="10 0 10 5"/>
        <Setter Property="Padding" Value="3 5 5 5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Foreground" Value="DarkSlateGray"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="Gray"
                        BorderThickness="2"
                        CornerRadius="10"
                        SnapsToDevicePixels="True">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/Resource/Images/Application/Base_Icon_Search.png"
                                Width="30"
                                Height="30"
                                VerticalAlignment="Center"
                                Margin="5,0,5,0" />
                            <ScrollViewer x:Name="PART_ContentHost"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Margin="0"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="DimGray"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="DimGray"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PosFilterGridStyle" TargetType="Grid">
        <Setter Property="Height" Value="40"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="PosFilterTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="0 0 8 5"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Foreground" Value="DarkSlateGray"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="PosFilterComboBoxStyle" TargetType="ComboBox">
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MaxWidth" Value="220"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0 0 20 0"/>
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton x:Name="ToggleButton"
                            Focusable="False"
                            IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Foreground="DarkSlateGray"
                            HorizontalAlignment="Center"
                            Cursor="Hand"
                            Width="{TemplateBinding ActualWidth}">
                            <Border x:Name="MainBorder"
                                Background="OldLace"
                                BorderBrush="Gray"
                                BorderThickness="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Content="{TemplateBinding SelectionBoxItem}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        Width="{TemplateBinding ActualWidth}"
                                        Margin="4,2,0,2"
                                        RecognizesAccessKey="True"/>
                                    <TextBlock Grid.Column="1"
                                        Text="▼"
                                        FontSize="16"
                                        Foreground="DarkSlateGray"
                                        VerticalAlignment="Center"
                                        Margin="0,0,12,0"/>
                                </Grid>
                            </Border>
                        </ToggleButton>
                        <Popup x:Name="Popup"
                            Placement="Bottom"
                            IsOpen="{TemplateBinding IsDropDownOpen}"
                            AllowsTransparency="True"
                            Focusable="False"
                            PopupAnimation="Slide">
                            <Grid x:Name="DropDown"
                                SnapsToDevicePixels="True"
                                MinWidth="{TemplateBinding ActualWidth}">
                                <Border x:Name="DropDownBorder"
                                    Background="OldLace"
                                    BorderBrush="OldLace"
                                    BorderThickness="2"
                                    MinWidth="{TemplateBinding ActualWidth}"/>
                                <ScrollViewer Padding="2" SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True"/>
                                </ScrollViewer>
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="Background" Value="FloralWhite"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PosFilterComboBoxItemStyle" TargetType="ComboBoxItem">
        <Setter Property="Margin" Value="3,3,3,0"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Foreground" Value="DarkSlateGray"/>
        <Setter Property="Background" Value="#F3EAD8"/>
        <Setter Property="BorderBrush" Value="OldLace"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border x:Name="Item"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter 
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            SnapsToDevicePixels="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Item" Property="BorderBrush" Value="Gray"/>
                            <Setter TargetName="Item" Property="Background" Value="FloralWhite"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Item" Property="BorderBrush" Value="Gray"/>
                            <Setter TargetName="Item" Property="Background" Value="OldLace"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Item" Property="BorderBrush" Value="Gray"/>
                            <Setter TargetName="Item" Property="Background" Value="FloralWhite"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PosFilterItemImageStyle" TargetType="Image">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5 1 5 1"/>
    </Style>

    <Style x:Key="PosFilterItemTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="5 0 0 0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="PosAdditionalFilterGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="22 5 22 0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>

    <Style x:Key="PosAdditionalFilterToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Width" Value="160"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <Border x:Name="SwitchBackground"
                            CornerRadius="18"
                            Background="OldLace"
                            BorderBrush="Gray"
                            BorderThickness="2"/>
                        <StackPanel 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="12,0,12,0">
                            <TextBlock x:Name="AllIcon"
                                Text="🧾"
                                FontSize="14"
                                Margin="25,0,7,0"
                                Foreground="DarkSlateGray"
                                Visibility="Visible"/>
                            <TextBlock x:Name="CheckIcon"
                                Text="✔"
                                FontSize="14"
                                Margin="0,0,7,0"
                                Foreground="DarkSlateGray"
                                Visibility="Collapsed"/>
                            <TextBlock x:Name="SwitchText"
                                Text="{TemplateBinding Content}"
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="DarkSlateGray"/>
                        </StackPanel>
                        <Ellipse x:Name="SwitchKnob"
                            Margin="2"
                            Width="37"
                            Height="37"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Fill="AntiqueWhite"
                            Cursor="Hand"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="SwitchBackground" Property="Background" Value="AntiqueWhite"/>
                            <Setter TargetName="SwitchText" Property="Margin" Value="0,0,22,0"/>
                            <Setter TargetName="SwitchKnob" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="CheckIcon" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="AllIcon" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="SwitchBackground" Property="Background" Value="FloralWhite"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PosProductsScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="Margin" Value="0 5 0 0"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="PanningMode" Value="VerticalOnly"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>

    <Style x:Key="PosProductsItemsControlStyle" TargetType="ItemsControl">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>

    <Style x:Key="PosProductsItemsWrapPanelStyle" TargetType="WrapPanel">
        <Setter Property="Margin" Value="0 10 0 10"/>
        <Setter Property="MaxWidth" Value="1000"/>
        <Setter Property="ItemWidth" Value="245"/>
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="OldLace"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>

    <Style x:Key="PosProductsBorderStyle" TargetType="Border">
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="235"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Background" Value="FloralWhite"/>
        <Setter Property="BorderBrush" Value="#C4C4C4"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="5" Color="Gray" BlurRadius="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PosProductsImageStyle" TargetType="Image">
        <Setter Property="Height" Value="150"/>
        <Setter Property="Width" Value="170"/>
        <Setter Property="Stretch" Value="UniformToFill"/>
        <Setter Property="Clip">
            <Setter.Value>
                <RectangleGeometry Rect="0 0 170 150" RadiusX="10" RadiusY="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PosProductsNameTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="5 10 5 0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Foreground" Value="DarkSlateGray"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <Style x:Key="PosProductsNameToolTipStyle" TargetType="ToolTip">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border 
                        Background="FloralWhite" 
                        BorderBrush="Gray" 
                        BorderThickness="2" 
                        CornerRadius="10" 
                        Padding="10">
                        <TextBlock Text="{TemplateBinding Content}" 
                            TextWrapping="Wrap" 
                            Foreground="DarkSlateGray" 
                            FontSize="14"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <Style x:Key="PosProductsDockPanelStyle" TargetType="DockPanel">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="0 10 0 0"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="PosProductsPriceTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="0 0 90 0"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="DimGray"/>
    </Style>

    <Style x:Key="PosProductsAddButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="IsTabStop" Value="True"/>
        <Setter Property="Focusable" Value="True"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                        Background="OldLace"
                        BorderBrush="Gray"
                        BorderThickness="2"
                        CornerRadius="10"
                        RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="ScaleTf" ScaleX="1" ScaleY="1"/>
                                <TranslateTransform x:Name="TransTf" Y="0"/>
                            </TransformGroup>
                        </Border.RenderTransform>
                        <ContentPresenter
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="Mouse.MouseEnter" SourceName="Bd">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="ScaleTf"
                                        Storyboard.TargetProperty="ScaleX"
                                        To="1.2"
                                        Duration="0:0:0.1"/>
                                    <DoubleAnimation
                                        Storyboard.TargetName="ScaleTf"
                                        Storyboard.TargetProperty="ScaleY"
                                        To="1.2"
                                        Duration="0:0:0.1"/>
                                    <DoubleAnimation
                                        Storyboard.TargetName="TransTf"
                                        Storyboard.TargetProperty="Y"
                                        To="-3"
                                        Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Mouse.MouseLeave" SourceName="Bd">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="ScaleTf"
                                        Storyboard.TargetProperty="ScaleX"
                                        To="1.0"
                                        Duration="0:0:0.1"/>
                                    <DoubleAnimation
                                        Storyboard.TargetName="ScaleTf"
                                        Storyboard.TargetProperty="ScaleY"
                                        To="1.0"
                                        Duration="0:0:0.1"/>
                                    <DoubleAnimation
                                        Storyboard.TargetName="TransTf"
                                        Storyboard.TargetProperty="Y"
                                        To="0"
                                        Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ScaleTf"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1.2" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="ScaleTf"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1.2" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="TransTf"
                                            Storyboard.TargetProperty="Y"
                                            To="-3" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ScaleTf"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1.0" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="ScaleTf"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1.0" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="TransTf"
                                            Storyboard.TargetProperty="Y"
                                            To="0" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PosProductsAddTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="DarkSlateGray"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform Y="-3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PosProductsPopupBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Background" Value="FloralWhite"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="8"/>
    </Style>

    <Style x:Key="PosProductsPopupTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Foreground" Value="DarkSlateGray"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
