<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
                    xmlns:lvcs="clr-namespace:LiveChartsCore.SkiaSharpView;assembly=LiveChartsCore.SkiaSharpView"
                    xmlns:lvcPaint="clr-namespace:LiveChartsCore.SkiaSharpView.Painting;assembly=LiveChartsCore.SkiaSharpView"
                    xmlns:skia="clr-namespace:SkiaSharp;assembly=SkiaSharp"
                    xmlns:ext="clr-namespace:PastryShop.Utility"
                    xmlns:conv="clr-namespace:PastryShop.Converter">
    <conv:ResourceKeyConverter x:Key="ResourceKeyConverter"/>
    <conv:BoolToLocalizedStringConverter x:Key="BoolToLocalizedStringConverter"/>

    <!-- Main Window -->

    <Style x:Key="BaseWindowGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="#121212"/>
    </Style>

    <Style x:Key="BaseProfileAndMenuBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#2B2B2B"/>
        <Setter Property="BorderBrush" Value="#2B2B2B"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="5" Color="#E6E6E6" BlurRadius="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BaseProfileStackPanelStyle" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,20,0,20"/>
    </Style>

    <Style x:Key="BaseProfileImageStyle" TargetType="Ellipse">
        <Setter Property="Stroke" Value="#121212"/>
        <Setter Property="StrokeThickness" Value="3"/>
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="80"/>
    </Style>

    <Style x:Key="BaseProfileUsernameTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Foreground" Value="#E6E6E6"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10,0,10"/>
    </Style>

    <Style x:Key="BaseMenuScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="PanningMode" Value="VerticalOnly"/>
    </Style>

    <Style x:Key="BaseMenuUniformGridStyle" TargetType="UniformGrid">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="BaseMenuButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#121212"/>
        <Setter Property="Foreground" Value="#E6E6E6"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="MinHeight" Value="60"/>
        <Setter Property="MaxHeight" Value="90"/>
        <Setter Property="MinWidth" Value="60"/>
        <Setter Property="MaxWidth" Value="90"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#121212"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="2" Color="#E6E6E6" BlurRadius="5" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10"
                        Effect="{TemplateBinding Effect}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush" Value="#121212"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="BaseMenuButtonIconStyle" TargetType="Image">
        <Setter Property="Height" Value="45"/>
        <Setter Property="Width" Value="45"/>
        <Setter Property="Margin" Value="20 10 18 5"/>
    </Style>

    <Style x:Key="BaseMenuButtonTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="#E6E6E6"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5 0 5 7"/>
    </Style>

    <Style x:Key="BaseLogoAndContentGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="15"/>
    </Style>

    <Style x:Key="BaseLogoGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0 0 0 10"/>
    </Style>

    <Style x:Key="BaseContentBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#121212"/>
        <Setter Property="BorderBrush" Value="#121212"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="5" Color="#E6E6E6" BlurRadius="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BaseContentControlStyle" TargetType="ContentControl">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>

    <ControlTemplate x:Key="ValidationErrorTemplate">
        <DockPanel LastChildFill="True">
            <TextBlock 
             Text="{Binding [0].ErrorContent}" 
             DockPanel.Dock="Bottom"
             Foreground="#E6E6E6" 
             FontSize="13"
             FontWeight="SemiBold"
             FontStyle="Italic"
             Margin="12 0 0 0"/>
            <AdornedElementPlaceholder/>
        </DockPanel>
    </ControlTemplate>

    <BitmapImage x:Key="BaseMainLogoImage" 
        UriSource="/Resource/Images/Application/Base_Main_Logo_Light.png"/>

    <BitmapImage x:Key="ManagerIconUserDetails" 
        UriSource="/Resource/Images/Application/Manager_Icon_User_Details_White.png"/>
    <BitmapImage x:Key="ManagerIconUserEdit" 
        UriSource="/Resource/Images/Application/Manager_Icon_User_Edit_White.png"/>
    <BitmapImage x:Key="ManagerIconUserDeactivate" 
        UriSource="/Resource/Images/Application/Manager_Icon_User_Deactivate_White.png"/>
    <BitmapImage x:Key="ManagerIconUserResetPassword" 
        UriSource="/Resource/Images/Application/Manager_Icon_User_ResetPassword_White.png"/>
    <BitmapImage x:Key="ManagerIconUserChangeType" 
        UriSource="/Resource/Images/Application/Manager_Icon_User_ChangeType_White.png"/>
    <BitmapImage x:Key="ManagerIconProductShowDetails" 
        UriSource="/Resource/Images/Application/Manager_Icon_Product_Show_Details_White.png"/>
    <BitmapImage x:Key="ManagerIconProductEditData" 
        UriSource="/Resource/Images/Application/Manager_Icon_Product_Edit_Data_White.png"/>
    <BitmapImage x:Key="ManagerIconProductEditProfile" 
        UriSource="/Resource/Images/Application/Manager_Icon_Product_Edit_Profile_White.png"/>
    <BitmapImage x:Key="ManagerIconProductChangeAvailability" 
        UriSource="/Resource/Images/Application/Manager_Icon_Product_Change_Availability_White.png"/>
    <BitmapImage x:Key="ManagerIconProductStocks" 
        UriSource="/Resource/Images/Application/Manager_Icon_Product_Stocks_White.png"/>

    <!-- User and Product Management -->

    <Style x:Key="UserAndProductManagementContainerGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style x:Key="UserAndProductManagementTitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 10 0 35"/>
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#E6E6E6"/>
    </Style>

    <Style x:Key="UserAndProductManagementContainerSearchAndFilterGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="30 0 30 0"/>
    </Style>

    <Style x:Key="UserManagementSearchAndFilterStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="UserManagementSearchTextBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Margin" Value="10 0 40 5"/>
        <Setter Property="Padding" Value="3 5 5 5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Background" Value="#2b2b2b"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="CaretBrush" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border 
                        x:Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="#2B2B2B"
                        BorderThickness="2"
                        CornerRadius="10"
                        SnapsToDevicePixels="True">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/Resource/Images/Application/Base_Icon_Search.png"
                                Width="30"
                                Height="30"
                                VerticalAlignment="Center"
                                Margin="5,0,5,0" />
                            <ScrollViewer 
                                x:Name="PART_ContentHost"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Margin="0"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="#121212"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="#121212"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="UserManagementFilterGridStyle" TargetType="Grid">
        <Setter Property="Height" Value="40"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="UserManagementFilterTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="0 0 10 5"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Foreground" Value="#E6E6E6"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="UserManagementFilterComboBoxStyle" TargetType="ComboBox">
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0 0 20 0"/>
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton 
                            x:Name="ToggleButton"
                            Focusable="False"
                            IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Foreground="#E6E6E6"
                            HorizontalAlignment="Center"
                            Cursor="Hand"
                            Width="{TemplateBinding ActualWidth}">
                            <Border 
                                x:Name="MainBorder"
                                Background="#121212"
                                BorderBrush="#2B2B2B"
                                BorderThickness="2">
                                <Grid>
                                    <ContentPresenter 
                                        Content="{TemplateBinding SelectionBoxItem}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        Width="{TemplateBinding ActualWidth}"
                                        Margin="4,2,0,2"
                                        RecognizesAccessKey="True"/>
                                </Grid>
                            </Border>
                        </ToggleButton>
                        <Popup 
                            x:Name="Popup"
                            Placement="Bottom"
                            IsOpen="{TemplateBinding IsDropDownOpen}"
                            AllowsTransparency="True"
                            Focusable="False"
                            PopupAnimation="Slide">
                            <Grid 
                                x:Name="DropDown"
                                SnapsToDevicePixels="True"
                                MinWidth="{TemplateBinding ActualWidth}">
                                <Border 
                                    x:Name="DropDownBorder"
                                    Background="#121212"
                                    BorderBrush="#2B2B2B"
                                    BorderThickness="2"
                                    MinWidth="{TemplateBinding ActualWidth}"/>
                                <ScrollViewer Padding="2" SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True"/>
                                </ScrollViewer>
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="Background" Value="#121212"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="UserAndProductManagementFilterComboBoxItemStyle" TargetType="ComboBoxItem">
        <Setter Property="Margin" Value="3,3,3,0"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#212121"/>
        <Setter Property="BorderBrush" Value="#212121"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border 
                        x:Name="Item"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter 
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            SnapsToDevicePixels="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Item" Property="BorderBrush" Value="#121212"/>
                            <Setter TargetName="Item" Property="Background" Value="#121212"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Item" Property="BorderBrush" Value="#121212"/>
                            <Setter TargetName="Item" Property="Background" Value="#121212"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Item" Property="BorderBrush" Value="#121212"/>
                            <Setter TargetName="Item" Property="Background" Value="#121212"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="UserAndProductManagementFilterItemImageStyle" TargetType="Image">
        <Setter Property="Width" Value="26"/>
        <Setter Property="Height" Value="26"/>
        <Setter Property="Margin" Value="6 2 6 2"/>
    </Style>

    <Style x:Key="UserAndProductManagementFilterItemTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="5 0 0 0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

